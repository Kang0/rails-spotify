<main role="main" class="container">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
            <img src="<%= @user.image %>" class="card-img img-responsive" alt="Profile Picture">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= @user.name %></h5>
                    <p class="card-text"><%= @user.email%></p>
                    <p class="card-text"><%= joined @user %></p>
                </div>
            </div>
        </div>
    </div>


    <div class="col-md-8 blog-main">
        <h3 class="pb-4 mb-4 font-italic border-bottom">
            <%= @review.album.name %> - <%= @review.album.artist.name %>
        </h3>

        <div class="blog-post">
            <h2 class="blog-post-title"><%= @review.title %></h2>
            <p class="blog-post-meta"><%= review_created @review %> - by <%= @user.name %></p>
            <p class="blog-post-meta"><%= rating_star @review.rating %><%= blank_star @review.rating %> <strong><%= @review.rating%>/10</strong></p>

            <p><%= @review.content %></p>
        </div><!-- /.blog-post -->
    </div>

    <div class="col-md-8">
        <button id="commentButton">Show Comments</button><br><br>
        <div id="showComments">
            <div id="commentResults">
                <!-- show posted comment -->
            </div>
            <!-- show Comments -->
        </div>
        <%= render :partial => 'comments/comment', locals: {comment: @comment, review: @review} %>
    </div>
</main>




