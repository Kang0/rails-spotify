<% @reviews.each do |review| %>
    <div class="card">
        <div class="card-header"><strong><%= review.title %></strong></div>
        <div class="card-body">
          <h5 class="card-title"><%= review.user.name %> - <%= review.rating%>/10</h5>
          <p class="card-text text-truncate"><%= review.content %></p>
          <a href="<%= album_review_path(review.album, review) %>" class="btn btn-primary">Go to Review</a>
        </div>
      </div><br>
<% end %>