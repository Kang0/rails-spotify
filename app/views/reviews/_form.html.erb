<% if review.errors.any? %>
    <div id="error_explanation">
        <h2>
            <%= pluralize(review.errors.count, "error") %>
            prohibited this review from being saved:
        </h2>

        <ul>
            <% review.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<div class="container">
    <div class="row">
        <%= form_for ([album, review]), :html => {:"id" => "newReview"} do |f| %>
            Title: <%= f.text_field :title%><br><br>
            Review: <br><%= f.text_area :content, size: "100x15" %><br><br>
            Rating (out of 10): <br><%= f.number_field :rating, in: 1..10, step: 1 %><br><br>
            Recommend: <%= f.check_box :recommend %>
            <%= f.submit%>
        <% end %>
    </div>
</div>