<h1>Please add a review for:</h1>

<h2><%= @album.name %></h2>
<img src="<%= image_path(@album.images) %>" height=300 ><br><br>

<div class="container">
    <div class="row">
        <%= form_for ([@album, @review]) do |f| %>
            Review: <br><%= f.text_area :content, size: "100x15" %><br>
            Rating (out of 10): <br><%= f.number_field :rating, in: 1..10, step: 1 %><br>
            Recommend: <%= f.check_box :recommend %><br>
            <%= f.submit %>
        <% end %>
    </div>
</div>

