<div class="album py-5 bg-light">
    <div class="container">
        <h4>Most Recent Reviews</h4>
        <div class="row">
            <% @reviews.reverse.first(4).each do |review| %>
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm" style = "width: 25rem;">
                        <div class="card-header">
                            <%= review.album.name %> - <%= review.album.artist.name %>
                        </div>
                        <img class="card-img-top" src="<%= review.album.images %>" alt="Album Cover">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" href="<%= album_reviews_path(review.album) %>">
                                        View Reviews
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="album py-5 bg-light">
        <div class="container">
            <h4>All Reviewed Albums</h4>
            <div class="row">
                <% @album.each do |album| %>
