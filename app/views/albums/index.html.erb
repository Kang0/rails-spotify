<section class="jumbotron text-center" style="background-image: url(https://maxcdn.icons8.com/app/uploads/2018/08/how-to-create-gradient-article.jpg); background-size: 100%;">
    <div class="container">
      <h1 class="jumbotron-heading" style="color: white;">Reviews</h1>
      <p class="lead" style="color: white; text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;">See what other's have to say about the album</p>
    </div>
  </section>

<div class="album py-5 bg-light">
    <div class="container-fluid">
        <h4>Most Recent Reviews</h4>
        <div class="row">
            <% @recent_review.reverse.each do |review| %>
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm" style = "width: 25rem;">
                        <div class="card-header">
                            <%= review.album.name %> - <%= review.album.artist.name %>
                        </div>
                        <img class="card-img-top" src="<%= review.album.images %>" alt="Album Cover">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" href="<%= album_reviews_path(review.album) %>">
                                        View Reviews
                                    </a>
                                    <a class="btn btn-sm btn-outline-secondary" href="<%= album_path(review.album) %>">
                                        View Album
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="album py-5 bg-light">
        <div class="container-fluid">
            <h4>All Reviewed Albums</h4>
            <div>
                Search by Artist:
                <%= form_tag "", method: "get" do %>
                    <%= text_field_tag "artist" %>
                    <%= submit_tag "Search" %>
                <% end %><br>
            </div>
            <div class="row">
                <% @album.each do |album| %>
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm" style = "width: 25rem;">
                            <div class="card-header">
                                <%= album.name %> - <%= album.artist.name %><br>
                            </div>
                            <img class="card-img-top" src="<%= album.images %>" alt="Album Cover">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" href="<%= album_reviews_path(album) %>">View Reviews</a>
                                        <a class="btn btn-sm btn-outline-secondary" href="<%= album_path(album) %>">View Album</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
       