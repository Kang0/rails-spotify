<%= form_for (comment), :html => {:"data-reviewid" => review.id} do |f| %>
    <div class="hidden">
        <%= f.hidden_field :review_id, :value => review.id %>
    </div>
    <div class="text-area">
        New Comment: <%= f.text_area :content, size:"50x2" %>
    </div>
    <div class="actions">
        <%= f.submit "Submit Comment" %>
    </div>
<% end %>